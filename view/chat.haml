    %iframe{ :id => "msgs_frame", :src => "frame", :width => "600px", :height => "300px"}
    
    %br/
    %br/
              
    %form{ :action => Rs(:message), :method => "POST" }
      %input{ :type => :input, :id => :message, :name => :message, :size => 65 }
      %input{ :type => :submit, :value => "Send" }
    
