%html
  %head
    %title Chat
    %script{ :type=> "text/javascript", :src => "jquery.js"}
    %script{ :type=> "text/javascript", :src => "index.js"}
    %link{ :type => "text/css", :rel => "stylesheet", :href => "style.css" }
    
  %body
      
